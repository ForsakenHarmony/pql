{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es6", "dom", "esnext"],
    "outDir": "dist/es",
    "baseUrl": ".",
    "paths": { "*": ["typings/*"] }
  },
  "include": ["**/src/**/*.ts", "**/typings/**/*.d.ts"]
}
