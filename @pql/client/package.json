{
  "name": "@pql/client",
  "version": "0.2.0-alpha.2",
  "description": "A lightweight graphql client",
  "source": "src/index.ts",
  "typings": "dist/index.d.ts",
  "esnext": "dist/es/index.js",
  "module": "dist/index.es.js",
  "main": "dist/index.cjs.js",
  "umd:main": "dist/index.umd.js",
  "repository": "ForsakenHarmony/pql",
  "author": "Leah <me@hrmny.pw>",
  "license": "MIT",
  "dependencies": {
    "@pql/observable": "^0.2.0-alpha.2",
    "@types/graphql": "^14.0.3"
  },
  "devDependencies": {
    "@pql/fetch": "^0.2.0-alpha.2",
    "@types/node-fetch": "^2.1.4",
    "node-fetch": "^2.3.0"
  },
  "peerDependencies": {
    "graphql": "^14.0.2"
  },
  "scripts": {
    "watch": "run-p -cls watch:**",
    "watch:ts": "tsc -w",
    "watch:main": "microbundle watch src/index.ts",
    "devbuild": "microbundle src/index.ts --no-compress --raw",
    "build": "npm-run-all --silent -p build:*",
    "build:ts": "tsc",
    "build:main": "microbundle src/index.ts",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\"\"module\"\": \"\"commonjs\"\"}\" ava",
    "clean": "rimraf dist .rts2*"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
