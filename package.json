{
  "private": true,
  "workspaces": [
    "@pql/*"
  ],
  "scripts": {
    "build": "lerna run build --sort --stream",
    "devbuild": "lerna run devbuild --sort --stream",
    "watch": "lerna run watch --no-bail --stream --parallel",
    "lint": "lerna run lint",
    "test": "yarn build && yarn test:all && yarn lint",
    "test:all": "lerna run test --stream --parallel",
    "clean": "lerna run clean --parallel",
    "prettier": "prettier **/*.{js,ts,tsx,json,css,md,yml} --write",
    "prepare": "npm run -s build"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "ava": "^2.2.0",
    "cross-env": "^5.2.0",
    "husky": "^3.0.1",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.0",
    "microbundle": "^0.12.0-next.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
