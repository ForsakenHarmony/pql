{
  "private": true,
  "workspaces": [
    "packages/@pql/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn build && yarn test && yarn lint",
    "publish": "lerna publish",
    "prettier": "prettier */**/*.ts --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "lerna": "^3.6.0",
    "microbundle": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2",
    "ava": "^1.0.1",
    "cross-env": "^5.2.0"
  }
}
