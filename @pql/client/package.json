{
  "name": "@pql/client",
  "version": "0.2.0-alpha.0",
  "description": "A lightweight graphql client",
  "source": "src/index.ts",
  "typings": "dist/index.d.ts",
  "module": "dist/es/index.js",
  "main": "dist/pql-client.js",
  "umd:main": "dist/pql-client.umd.js",
  "repository": "ForsakenHarmony/pql",
  "author": "Leah <me@hrmny.pw>",
  "license": "MIT",
  "dependencies": {
    "@pql/observable": "^0.2.0-alpha.0",
    "@types/graphql": "^14.0.3"
  },
  "devDependencies": {
    "@pql/fetch": "^0.2.0-alpha.0",
    "@types/node-fetch": "^2.1.4",
    "node-fetch": "^2.3.0"
  },
  "scripts": {
    "build": "npm-run-all --silent -p build:*",
    "build:ts": "tsc",
    "build:main": "microbundle src/index.ts -f umd,cjs",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\"\"module\"\": \"\"commonjs\"\"}\" ava"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
